<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePassword">

    <FrameLayout
        android:layout_width="319dp"
        android:layout_height="493dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/changePassword_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="Change password"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/strongPassword_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="80dp"
            android:text="Create a strong password"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textChangePassword_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            android:text="icubivubsivunweovuwbeovnweiuvbwebivubwevoinweovubwoevibwev"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/newPassword_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="240dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Enter new password" />

        <EditText
            android:id="@+id/confirmPassword_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="300dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Confirm password"/>

        <Button
            android:id="@+id/btn_savePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="430dp"
            android:layout_marginStart="150dp"
            android:layout_marginEnd="10dp"
            android:text="Save password"
            android:textSize="13sp"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="430dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="220dp"
            android:text="Skip" />

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>